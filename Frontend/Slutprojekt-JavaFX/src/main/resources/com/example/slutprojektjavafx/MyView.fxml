   <children>
      <AnchorPane prefHeight="492.0" prefWidth="791.0">
         <children>
            <ListView fx:id="listView" layoutX="120.0" layoutY="150.0" prefHeight="214.0" prefWidth="618.0" style="-fx-border-color: black; -fx-border-radius: 3px;" />
            <TextField fx:id="antTextField" layoutX="120.0" layoutY="77.0" prefHeight="26.0" prefWidth="618.0" promptText="Write new task (Title - Description)" style="-fx-border-color: black; -fx-border-radius: 3px;" />
            <Button layoutX="28.0" layoutY="79.0" mnemonicParsing="false" onAction="#addNewTask" style="-fx-background-color: #FFF7EE; -fx-border-color: black; -fx-border-radius: 3px;" text="Add New Task">
               <font>
                  <Font size="10.0" />
               </font>
            </Button>
            <Button layoutX="389.0" layoutY="363.0" mnemonicParsing="false" onAction="#showAllTasks" style="-fx-background-color: FFF7EE; -fx-border-color: black; -fx-border-radius: 3px;" text="Show All Tasks">
               <font>
                  <Font size="10.0" />
               </font>
            </Button>
